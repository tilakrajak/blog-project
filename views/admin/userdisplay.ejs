<%- include('../header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
      <div class="body-content">
        <div class="row">
          <div class="col-md-3">
            <%- include('../admin/sidebar.ejs') %>  
          </div>
          <div class="col-md-9">
            <div class="dash-right">
                <div class="dash-header">
                    <div class="dash-title">
                        <h1>User display</h1>
                    </div>
                </div>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>#ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phoneno</th>
                        <th>Verified</th>
                        <th>Comment</th>
                        
                        <th></th>
                        <th>Action</th>
                    </tr>
                    <% i=1 %>
                    <% d=d.reverse(); d.forEach((item)=>{ %>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= item.name %></td>
                            <td><%= item.email %></td>
                            <td><%= item.phone %></td>
                            <td><%= item.verified %></td>
                            <td>
                              <form action="/update_approve/<%= item.id %>" method="post">
                                <textarea name="comment" ></textarea>
                                <input type="hidden" name="name" value="<%= item.name %>">
                                <input type="hidden" name="email" value="<%= item.email %>"> 
                              
                              </td>
                            <td>
                             <button type="submit" name="verified" class="btn btn-info" value="Approved">Approved</button> 
                             <button type="submit" name="verified" class="btn btn-danger" value="Reject">Reject</button>
                            </form>
                            </td>
                            <td>
                              <a href="/admin/viewuser/<%= item._id %>" class="btn btn-info btn-sm">View</a>
                              <a href="/admin/edituser/<%= item._id %>" class="btn btn-info btn-sm">Edit</a>
                              <a href="/admin/deleteuser/<%= item._id %>" class="btn btn-info btn-sm">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                    </table>
                </div>   
            </div>
    </div>
</div>
</div>
</section>

<%- include('../footer.ejs') %>